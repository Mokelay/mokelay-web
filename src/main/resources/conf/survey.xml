<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- Questionnaire-->
    <class name="com.chinaredstar.cms.api.model.CmsQuestionnaire" table="tb_cms_questionnaire" lazy="false">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="willNum" column="will_num" type="integer"/>
    </class>

    <!-- QuestionAnswer-->
    <class name="com.chinaredstar.cms.api.model.CmsQuestionAnswer" table="tb_cms_question_answer" lazy="false">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="questionnaireId" column="questionnaire_id" type="integer"/>
        <property name="questionId" column="question_id" type="string"/>
        <property name="optionId" column="option_id" type="string"/>
        <property name="optionContent" column="option_content" type="string"/>
        <property name="userIp" column="user_ip" type="string"/>
        <property name="userName" column="user_name" type="string"/>
        <property name="createTime" column="create_time" type="java.util.Date"/>
        <property name="userId" column="user_id" type="string"/>
        <property name="source" column="source" type="string"/>
    </class>

    <!--User-->
    <class name="com.chinaredstar.cms.api.model.CmsQuestionnaireUser" table="tb_cms_questionnaire_user" lazy="false">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="questionnaireId" column="questionnaire_id" type="integer"/>
        <property name="userIp" column="user_ip" type="string"/>
        <property name="userName" column="user_name" type="string"/>

        <property name="createTime" column="create_time" type="java.util.Date"/>

        <property name="province" column="province" type="string"/>
        <property name="city" column="city" type="string"/>
        <property name="area" column="area" type="string"/>
        <property name="address" column="address" type="string"/>
        <property name="mobile" column="mobile" type="string"/>
    </class>

    <!-- Report-->
    <class name="com.chinaredstar.cms.api.model.CmsQuestionnaireReport" table="tb_cms_questionnaire_report" lazy="false">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="questionnaireId" column="questionnaire_id" type="integer"/>
        <property name="userId" column="user_id" type="string"/>
        <property name="userIp" column="user_ip" type="string"/>
        <property name="phone" column="phone" type="string"/>
        <property name="userName" column="user_name" type="string"/>
        <property name="createTime" column="create_time" type="java.util.Date"/>
        <property name="answerContent" column="answer_content" type="string"/>
    </class>
</hibernate-mapping>